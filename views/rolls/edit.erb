<link rel="stylesheet" type="text/css" href="/styles/buttons.css">
<link rel="stylesheet" type="text/css" href="/styles/tables.css">
<link rel="stylesheet" type="text/css" href="/styles/forms.css">
<link rel="stylesheet" type="text/css" href="/styles/structure.css">

<header>
  <h1>CarpetClan Warehouse Stock Management</h1>
</header>

<form action="/rolls/<%= @rolls.id %>" method="POST">
  <label for="carpet_id">Brand: </label>
  <select id="carpet-range-select" name="carpet_id">
    <% for carpet in @carpets%>
    <option value=<%=carpet.id%>> <%=carpet.brand%></option>
    <% end %>
    </select>
    <p></p>
    <label for="colour">Colour: </label>
    <input id="colour" type="text" name="colour" required/>
    <p></p>
  <label for="roll_width">Roll Width: </label>
  <select id="roll-width-select" name="roll_width">
    <option value= "4">4</option>
    <option value= "5">5</option>
    </select>
    <p></p>
  <label for="roll_length">Roll Length: </label>
  <input id="roll_length" type="text" name="roll_length" required/>
  <p></p>

  <input type="submit" value="Edit Roll"/>
 </form>
