<link rel="stylesheet" type="text/css" href="/styles/buttons.css">
<link rel="stylesheet" type="text/css" href="/styles/tables.css">
<link rel="stylesheet" type="text/css" href="/styles/forms.css">
<link rel="stylesheet" type="text/css" href="/styles/structure.css">

<header>
  <h1>CarpetClan Warehouse Stock Management</h1>
</header>

<body>

<h1>Carpets</h1>


<table>
  <tr>
    <th>ID Number</th>
    <th>Brand</th>
    <th>Supplier</th>
    <th>Buying Cost (m<sup>2</sup>)</th>
    <th>Selling Price (m<sup>2</sup>)</th>
    <th>Margin (m<sup>2</sup>)</th>
    <th>Stock</th>
  </tr>
  <% for carpet in @carpets %>
  <tr>
    <td><%= carpet.id %></td>
    <td><%= carpet.brand %></td>
    <td><a href="/suppliers/<%= carpet.supplier.id %>"><%= carpet.supplier.name %></a></td>
    <td><%= carpet.buying_cost %></td>
    <td><%= carpet.selling_price %></td>
    <td><%= carpet.margin %></td>
    <td><% for roll in @rolls %>
      <% if carpet.id == roll.carpet_id %>
  <a href="/carpets/<%= carpet.id %>">Check Stock</a>
  <% @found = true %>
  <% break %>
  <% else %>
  <%@found = false%>
      <% end %>
    <% end %>
    <% if !@found %>
    Out of Stock
    <% end %>
    </td>
    <td><a href="/carpets/<%= carpet.id %>/edit"> Edit</td>
    <td><form action="/carpets/<%= carpet.id %>/destroy" method = "post">
      <button type="submit">Delete</button>
    </form></td>
  </tr>
  <% end %>
</table>


<center><p><a href="/carpets/new">Add Carpet</a></p>


<p><a href="/">Home</a></p>
</center>

</body>
</html>
